                $('.dialog').hide();
                $('.dialog-product').hide();
            },
            error: function () {
                alert("Xoá thông tin loại thực phẩm không thành công");
            }
        });
    }
    //CLick vào mỗi dòng dữ liệu
    $(document).on('click', '#allProduct tr', function () {
        $(this).siblings().removeClass('row-selected');
